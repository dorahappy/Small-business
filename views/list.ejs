<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/lib/animate.css">
</head>
<body>
   

  <%- include('./header.ejs') %>
 
    <div style="margin-top:20px;" class="container goods">
        <div class="panel panel-default">
          <div class="panel-heading">
              
                <button data-id="0" class="type-btn  btn btn-primary">全部</button>
                
                <% classes.forEach((item,i)=>{ %>
                <button data-id="<%= item.classid %>" class=" type-btn btn btn-info"><%= item.class %></button>
                <% }) %>  

                <button data-order="price" class="order-btn  btn btn-info">价格</button>
                <button data-order="hot" class="order-btn btn btn-info">人气</button>

                <input id="search-inp" style="width:200px;" placeholder="请输入商品名字" type="text" class="form-control pull-right" >

          </div>  
          <div class="panel-body">
            <div class="row">
  
              <!-- xs:0-768 sm:768-992 md:992-1200 lg:1200-- -->
  
                <% goods.forEach((good,i)=>{ %>
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="thumbnail">
                          <img class="animated" src="<%= good.imgurl %>" title="<%= good.name %>" >
                          <div class="caption">
                            <h3><a href="/show?id=<%= good._id %>"><%= good.name %></a></h3>
                            <p>￥：<%= good.price %> 人气：<%= good.hot %></p>
                            <p>
                              <button data-id="<%= good._id%>" class="add-btn btn btn-danger" >加入购物车</button> 
                            </p>
                          </div>
                        </div>
                    </div>
                <% }) %>  
  
            </div>
          </div>
        </div>
      </div>
    

    

    
    
    <script src="/lib/jquery.js"></script>
    <script src="/lib/jquery-cookie.js"></script>
    <script src="/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="/javascripts/list.js"></script>
    <script src="/javascripts/cart.js"></script>
    <script>
      cart.init()
    </script>
</body>
</html>



